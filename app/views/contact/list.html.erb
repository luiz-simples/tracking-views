<div class="blog-header">
  <h1 class="blog-title">Admin#Page</h1>
  <p class="lead blog-description">Find me in app/views/contact/list.html.erb</p>
</div>

<div class="row">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Message</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <th scope="row"><%= contact["email"] %></th>
            <td><%= contact["name"] %></td>
            <td><%= contact["message"] %></td>
            <td><%= link_to "Activities", activities_path(contact["cid"]), target: "_blank" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
